<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:id="@+id/phone_txt"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_margin="16dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/phone_txt"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message"
        android:id="@+id/message_txt"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_txt" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_marginTop="30dp"
        android:layout_margin="16dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/message_txt"
        app:layout_constraintTop_toBottomOf="@id/phoneEditText"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal"
        android:text="@string/close"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@id/nextBtn"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"
        android:text="@string/next"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="420dp">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>